<Window x:Class="WhereisMouse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WhereisMouse"
        mc:Ignorable="d"
        WindowStartupLocation="Manual"
        Left="0" Top="0"
        Title="WhereisMouse" Height="150" Width="300"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#88FFFFFF"
        Topmost="True">
    <Grid>
        <TextBox HorizontalAlignment="Left" x:Name="xBox" Height="64" Margin="10,57,0,0" TextWrapping="Wrap" Text="1920" VerticalAlignment="Top" Width="120" FontSize="48"/>
        <TextBox HorizontalAlignment="Left" x:Name="yBox" Height="64" Margin="158,57,0,0" TextWrapping="Wrap" Text="1080" VerticalAlignment="Top" Width="124" FontSize="48"/>
        <Label Content="X" HorizontalAlignment="Left" Margin="58,19,0,0" VerticalAlignment="Top" Height="33" Width="24" FontSize="20"/>
        <Label Content="Y" HorizontalAlignment="Left" Margin="205,19,0,0" VerticalAlignment="Top" Height="33" Width="24" FontSize="20"/>
        <Label Content=":" HorizontalAlignment="Left" Margin="135,72,0,0" VerticalAlignment="Top" Height="34" Width="18" FontSize="20"/>
    </Grid>
    
</Window>
